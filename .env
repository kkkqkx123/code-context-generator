# 代码上下文生成器环境变量配置
# 默认导出格式 (xml, json, toml, markdown)
CODE_CONTEXT_DEFAULT_FORMAT=xml

# 输出目录 (空表示当前目录)
CODE_CONTEXT_OUTPUT_DIR=

# 最大扫描深度 (-1表示无限制)
CODE_CONTEXT_MAX_DEPTH=-1

# 是否跟随符号链接 (true/false)
CODE_CONTEXT_FOLLOW_SYMLINKS=false

# 是否包含隐藏文件 (true/false)
CODE_CONTEXT_INCLUDE_HIDDEN=false

# 最大文件大小限制 (例如: 10MB, 1KB, 500KB)
CODE_CONTEXT_MAX_FILE_SIZE=10MB

# 是否排除二进制文件 (true/false)
CODE_CONTEXT_EXCLUDE_BINARY=true

# 排除模式 (逗号分隔的文件模式，例如: .git,node_modules,*.exe,*.dll)
CODE_CONTEXT_EXCLUDE_PATTERNS=.git,node_modules,*.exe,*.dll

# 输出文件编码格式 (utf-8, gbk, gb2312, big5)
CODE_CONTEXT_ENCODING=utf-8

# 是否包含文件元信息 (true/false)
# 元信息包括: size, mod_time, is_dir, is_hidden, is_binary
CODE_CONTEXT_INCLUDE_METADATA=false

# 安全扫描配置
# 是否启用安全检查 (true/false) - 默认禁用，仅由gitignore规则控制
CODE_CONTEXT_SECURITY_ENABLED=false
# 是否在发现严重问题时失败 (true/false)
CODE_CONTEXT_SECURITY_FAIL_ON_CRITICAL=false
# 安全扫描级别 (basic/standard/comprehensive)
CODE_CONTEXT_SECURITY_SCAN_LEVEL=standard
# 安全报告格式 (text/json/xml)
CODE_CONTEXT_SECURITY_REPORT_FORMAT=text
# 是否检测硬编码凭证 (true/false)
CODE_CONTEXT_SECURITY_DETECT_CREDENTIALS=true
# 是否检测SQL注入 (true/false)
CODE_CONTEXT_SECURITY_DETECT_SQL_INJECTION=true
# 是否检测XSS漏洞 (true/false)
CODE_CONTEXT_SECURITY_DETECT_XSS=true
# 是否检测路径遍历 (true/false)
CODE_CONTEXT_SECURITY_DETECT_PATH_TRAVERSAL=true
# 是否检测代码质量问题 (true/false)
CODE_CONTEXT_SECURITY_DETECT_QUALITY=true