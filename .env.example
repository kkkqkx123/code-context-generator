# 代码上下文生成器配置
CODE_CONTEXT_LOG_LEVEL=info
CODE_CONTEXT_OUTPUT_FORMAT=markdown
CODE_CONTEXT_MAX_FILE_SIZE=1MB
CODE_CONTEXT_EXCLUDE_PATTERNS=.git,node_modules,*.exe,*.dll
CODE_CONTEXT_MAX_DEPTH=3
CODE_CONTEXT_INCLUDE_HIDDEN=false
CODE_CONTEXT_INCLUDE_CONTENT=true
CODE_CONTEXT_EXCLUDE_BINARY=true
CODE_CONTEXT_MAX_WORKERS=0

# 安全扫描配置
CODE_CONTEXT_SECURITY_ENABLED=true
CODE_CONTEXT_SECURITY_FAIL_ON_CRITICAL=false
CODE_CONTEXT_SECURITY_SCAN_LEVEL=standard
CODE_CONTEXT_SECURITY_REPORT_FORMAT=text
CODE_CONTEXT_SECURITY_DETECT_CREDENTIALS=true
CODE_CONTEXT_SECURITY_DETECT_SQL_INJECTION=true
CODE_CONTEXT_SECURITY_DETECT_XSS=true
CODE_CONTEXT_SECURITY_DETECT_PATH_TRAVERSAL=true
CODE_CONTEXT_SECURITY_DETECT_QUALITY=true